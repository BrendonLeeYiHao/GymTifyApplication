@using GymFitApplication.Areas.Identity.Data;
@model List<GymFitApplicationUser>
@using Microsoft.AspNetCore.Identity
@inject UserManager<GymFitApplicationUser> UserManager

@{
    ViewData["Title"] = "StudentList";
}

<style>
    button {
        background-color: rgb(245, 99, 75);
        border: 0;
        color: white;
    }
</style>

<h3>@ViewData["Title"]</h3>


<center style="margin-top:80px; margin-bottom:50px">
    <div class="row">
        @*<div class="col-4">
            <form method="post" asp-action="Search" asp-controller="User">
                <label>Keyword</label> &nbsp;&nbsp;
                <input type="text" name="SearchString" /> &nbsp;&nbsp;
                <button type="submit">Search</button>
            </form>
        </div>*@
        <div class="col-4">
            <h1>Student List</h1>
        </div>        
    </div>


    <div style="padding:20px 50px">
        <table class="table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Email Address</th>
                    <th>Package Id</th>
                    <th>Phone Number</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Rolename</td>
                        <td>@user.Email</td>
                        <td>@user.Packageid</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Dateofbirth.ToString("dd/MM/yyyy")</td>
                        <td>@user.Gender</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</center>
