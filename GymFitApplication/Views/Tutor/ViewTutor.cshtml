@model List<Tutor>

@{
    ViewData["Title"] = "ViewTutor";
}

<div class="main-wrapper ">
	<section class="page-title bg-2">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<ul class="list-inline mb-0">
						<li class="list-inline-item"><a asp-controller="Home" asp-action="Index" class="text-sm letter-spacing text-white text-uppercase font-weight-bold">Home</a></li>
						<li class="list-inline-item"><span class="text-white">|</span></li>
						<li class="list-inline-item"><a href="#" class="text-color text-uppercase text-sm letter-spacing">Tutor</a></li>
					</ul>
					<h1 class="text-lg text-white mt-2">Tutor</h1>
				</div>
			</div>
		</div>
	</section>

	<!-- Section Team Start -->
	<section class="section bg-gray">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-8 text-center">
					<div class="section-title">
						<div class="divider mb-3"></div>
						<h2>Our Tutor</h2>
					</div>
				</div>
			</div>

			<div class="row">
				@foreach (var tutor in Model)
				{
					<div class="col-lg-6">
						<div class="card border-0 mb-1  bg-transparent rounded-0 mb-4">
							<div class="row no-gutters align-items-center">
								<div class="col-md-6">
									<img src="@tutor.Image" alt="" class="img-fluid w-100">
								</div>
								<div class="col-md-6">
									<div class="card-body team-wrap pl-4">
										<h3 class="card-title text-color">@tutor.Name</h3>
										<h6 class="card-subtitle pb-4 letter-spacing">@tutor.Title</h6>
										<p class="mb-5">@tutor.Description</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				}		
			</div>
		</div>
	</section>

