@model IEnumerable<GymFitApplication.Models.Product>

@{
    ViewData["Title"] = "ProductList";
}


<style>
    button {
        background-color: rgb(245, 99, 75);
        border: 0;
        color: white;
    }
</style>

<h3>@ViewData["Title"]</h3>

<center style="margin-top:80px; margin-bottom:50px">
    <div class="row">
        <div class="col-4">
            <form method="post" asp-action="Search" asp-controller="Product">
                <label>Keyword</label> &nbsp;&nbsp;
                <input type="text" name="SearchString" /> &nbsp;&nbsp;
                <button type="submit">Search</button>
            </form>
        </div>
        <div class="col-4">
            <h1>Product List</h1>
        </div>
        <div class="col-4">
            <a class="nav-link" asp-action="Index" asp-controller="Product">
                <button class="btn-lg">New Product</button>
            </a>
        </div>
    </div>


    <div style="padding:20px 50px">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Action</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Price</td>
                        <td><img src="@product.Image" width="200" height="200" /></td>
                        <td><a asp-action="editpage" asp-controller="Product" asp-route-productid="@product.ProductId"><button>Edit</button></a></td>
                        <td><a asp-action="deletepage" asp-controller="Product" asp-route-productid="@product.ProductId"><button>Delete</button></a></td>
                    </tr>                                  
                }
            </tbody>
        </table>
    </div>
</center>