@model List<Product>

@{
	ViewData["Title"] = "ViewProduct";
}

<div class="main-wrapper">
	<section class="page-title bg-2">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<ul class="list-inline mb-0">
						<li class="list-inline-item"><a asp-controller="Home" asp-action="Index" class="text-sm letter-spacing text-white text-uppercase font-weight-bold">Home</a></li>
						<li class="list-inline-item"><span class="text-white">|</span></li>
						<li class="list-inline-item"><a href="#" class="text-color text-uppercase text-sm letter-spacing">Product</a></li>
					</ul>
					<h1 class="text-lg text-white mt-2">Product </h1>
				</div>
			</div>
		</div>
	</section>

	<!-- Section pricing start -->
	<section class="section pricing">
		<div class="container">
			
			<div class="row justify-content-center">
				<div class="col-lg-8 text-center">
					<div class="section-title">
						<div class="divider mb-3"></div>
						<h2>Product Pricing</h2>
					</div>
				</div>
			</div>

			<div class="row justify-content-center">
				@foreach (var product in Model)
				{					
					<div class="col-lg-4 col-md-6 mb-4 mb-lg-10">
						<div class="card rounded-0 px-4 py-5">
							<div class="row justify-content-center">
								<div style="width:200px; height: 200px; padding:5px">
									<img src="@product.Image" width="200" height="200" />
								</div>
							</div>
							<h4 class="card-title text-capitalize font-weight-normal font-secondary">@product.Name</h4>
							<h3 class="text-lg font-secondary position-relative mt-2"><sup class="text-sm position-absolute">RM</sup> &nbsp; @product.Price</h3>

							<div class="card-body mt-2">
								<ul class="list-unstyled lh-35 mb-4">
									<li class="text-black font-weight-bold"><i class="ti-check mr-3 text-color "></i>@product.Description</li>
								</ul>								
							</div>
						</div>
					</div>					
				}
			</div>
		</div>
	</section>
	<!-- Section pricing End -->
</div>



