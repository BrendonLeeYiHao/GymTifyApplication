@model GymFitApplication.Models.Feedback
@{
    ViewData["Title"] = "ContactPage";
}

<br><br />
<section class="page-title bg-2">
    <div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <ul class="list-inline mb-0">
            <li class="list-inline-item"><a asp-controller="Home" asp-action="Index" class="text-sm letter-spacing text-white text-uppercase font-weight-bold">Home</a></li>
            <li class="list-inline-item"><span class="text-white">|</span></li>
            <li class="list-inline-item"><a href="#" class="text-color text-uppercase text-sm letter-spacing">contact</a></li>
            </ul>
            <h1 class="text-lg text-white mt-2">Contact Us</h1>
        </div>
    </div>
    </div>
</section>




<!-- contact form start -->
<section class="contact-form section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <div class="section-title">
          <div class="divider mb-3"></div>
          <h2>Contact Us</h2>
          <p class="mt-3">GymTify is always here to assist you! Feel free to ask us anything to clarify your doubts</p>
        </div>
      </div>
    </div>

    <div class="row justify-content-center pb-5">
      <div class="col-lg-9 text-center">
        @if (!string.IsNullOrEmpty(TempData["StatusMessage"] as string))
        {
            <div id="statusMessage" class="alert alert-success" role="alert">
                @TempData["StatusMessage"]
            </div>
        }
        <form id="contactForm" asp-controller="Feedback" asp-action="ContactPage">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-row">
            <div class="col-lg-6 col-md-6 col-sm-12">
              <div class="form-group">
                @*<input name="user_name" type="text" class="form-control" placeholder="Your Name">*@
                <input asp-for="Name" class="form-control" aria-required="true" placeholder="Your Name">
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
              <div class="form-group">
@*                <input name="user_email" type="text" class="form-control" placeholder="Email Address">*@
                <input asp-for="Email" class="form-control" aria-required="true" placeholder="Email Address"/>
                <span asp-validation-for="Email" class="text-danger"></span>
              </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12">
              <div class="form-group-2">
                <textarea asp-for="Message" class="form-control" rows="8" placeholder="Your Message"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
              </div>

              <div class="text-center">
                <button class="btn btn-main mt-3 " type="submit">Send Feedback</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="google-map position-relative mt-5" style="text-align:center">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15938.424909738704!2d101.74780543955079!3d2.9289667000000015!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31cdc91193a97217%3A0xd50b4661749e32e9!2sGfit%20Gym%20%26%20Fitness%20Center!5e0!3m2!1sen!2smy!4v1691230231192!5m2!1sen!2smy" width="800" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
@*    <div class="map" id="map_canvas" data-latitude="51.507351" data-longitude="-0.127758"
      data-marker="images/marker.png"></div>*@
  </div>

  <div class="container mt--170">
    <div class="row">
      <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
        <div class="card rounded-0 border-0 shadow-sm text-center py-5 px-4 contact-info" style="background-color:#dcd1f1">
          <i class="ti-mobile mb-3 text-lg text-color"></i>
          <span>Call us</span>
          <p class="lead text-black mb-0 mt-3">+6012 518 9992</p>
          <p class="lead">9:00 am - 12:00 am</p>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
        <div class="card rounded-0 border-0 shadow-sm text-center py-5 px-4 contact-info" style="background-color:#a0f2ff">
          <i class="ti-email mb-3 text-lg text-color"></i>
          <span>Email at</span>
          <p class="lead text-black mt-3 mb-0">gymtify@outlook.com</p>
          <p class="lead text-black ">gymtify@gmail.com</p>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
        <div class="card rounded-0 border-0 shadow-sm text-center py-5 px-4 contact-info" style="background-color:#a2fcaa">
          <i class="ti-home mb-3 text-lg text-color"></i>
          <span>Location</span>
          <p class="lead text-black mt-3">Bukit Jalil, Jalan Teknologi Park, Malaysia</p>
        </div>
      </div>
    </div>
  </div>
</section>


<script>
    // Check if the status message is present, then set a timer to hide it after 5 seconds
    document.addEventListener("DOMContentLoaded", function() {
        var statusMessageElement = document.getElementById("statusMessage");
        if (statusMessageElement) {
            setTimeout(function() {
                statusMessageElement.style.display = "none";
            }, 5000); // 5000 milliseconds = 5 seconds
        }
    });
</script>

